@model FindRBeta.Models.Location

@{
    ViewBag.Title = "Edit location";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Location"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(l => l.LocationId)
    <br />

    @Html.Label("Country", "Tara:")
    <br />
    @Html.EditorFor(l => l.Country, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(l => l.Country, "", new { @class = "text-danger" })
    <br />
    <br />


    @Html.Label("City", "Oras:")
    <br />
    @Html.EditorFor(l => l.City, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(l => l.City, "", new { @class = "text-danger" })
    <br />
    <br />


    @Html.Label("Placement", "Pozitionare:")
    <br />
    @Html.EnumDropDownListFor(l => l.Placement, "Alege zona", new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Placement, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}