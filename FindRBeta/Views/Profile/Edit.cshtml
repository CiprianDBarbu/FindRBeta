@model FindRBeta.Models.Profile

@{
    ViewBag.Title = "Editeaza profilul";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Profile"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <!-- camp ascuns pentru id-ul profilului -->
    @Html.HiddenFor(p => p.ProfileId)
    <br />

    @Html.Label("Age", "Varsta:")
    <br />
    @Html.EditorFor(p => p.Age, new { htmlAttributes = new { @class = "formcontrol" } })
    @Html.ValidationMessageFor(p => p.Age, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Gender", "Gen:")
    <br />
    @Html.EnumDropDownListFor(p => p.GenderType, "Alege genul", new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.GenderType, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Location", "Locatia in care cautati cazare")
    <br />
    @Html.DropDownListFor(p => p.LocationId, new SelectList(Model.LocationsList, "Value", "Text"), "Alegeti zona de cautare", new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.LocationId, "", new { @class = "text-danger" })
    <br />


    @Html.Label("Details", "Despre tine:")
    <br />
    @Html.TextAreaFor(p => p.Details, new { @class = "form-control", @rows = 10})
    @Html.ValidationMessageFor(p => p.Details, "", new { @class = "text-danger"})

    <button class="btn btn-primary" type="submit">Editeaza profil</button>
}
