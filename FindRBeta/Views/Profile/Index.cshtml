@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Profiles";
}

<h2>@ViewBag.Title</h2>

@foreach(var profile in ViewBag.Profiles)
{
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Label("FirstName", "First name:")
            <br />
            <p>@profile.FirstName</p>

            @Html.Label("LastName", "Last name:")
            <br />
            <p>@profile.LastName</p>

            @Html.Label("Age", "Age:")
            <br />
            <p>@profile.Age</p>

            @if (User.Identity.GetUserName() == profile.AplicationUserName)
            {
                using (Html.BeginForm(actionName: "Details", controllerName: "Profile", method: FormMethod.Get, routeValues: new { id = profile.ProfileId }))
                {
                    <button style="margin-right:5px; margin-left:5px" class="btn btn-primary col-lg-1" type="submit">More details</button>
                }
            }
        </div>
    </div>
}